<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="LibrosITESRCMAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:LibrosITESRCMAUI"
    xmlns:views="clr-namespace:LibrosITESRCMAUI.Views"
    xmlns:vm="clr-namespace:LibrosITESRCMAUI.ViewModels"
    Shell.FlyoutBehavior="Disabled"
    Title="LibrosITESRCMAUI"
    Shell.BackgroundColor="Maroon"
    Shell.ForegroundColor="White"
    Shell.TitleColor="White"
    >

    <Shell.BindingContext>
        <vm:LibrosViewModel></vm:LibrosViewModel>
    </Shell.BindingContext>

    <ShellContent
   ContentTemplate="{DataTemplate views:ListaView}"
   Route="Lista" />

    <ShellContent
        ContentTemplate="{DataTemplate views:AgregarView}"
        Route="Agregar" />

    <ShellContent
     ContentTemplate="{DataTemplate views:EditarView}"
     Route="Editar" />

 

</Shell>
